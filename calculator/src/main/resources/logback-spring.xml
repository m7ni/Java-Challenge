<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define Pattern for Log Messages including requestId from MDC -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] [RequestId:%X{requestId}] %logger{36} - %msg%n"/>

    <!-- Console Appender for Immediate Feedback -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- File Appender for Persistent Logs -->
    <appender name="FileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/calculator.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Roll log files daily -->
            <fileNamePattern>logs/calculator.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Keep 30 days' worth of history -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Root Logger: DEBUG Level and Above -->
    <root level="INFO">
        <appender-ref ref="Console" />
        <appender-ref ref="FileAppender" />
    </root>

    <!-- Logger for Specific Packages (Optional) -->
    <!-- Example: Reduce verbosity for Spring Framework -->
    <logger name="org.springframework" level="INFO" />

</configuration>